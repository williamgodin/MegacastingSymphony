{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="container">
        <h1>Inscription</h1>
        <p class="d-flex justify-content-center text-decoration-none"><a href="{{ path("login") }}">Si vous êtes déjà inscrit cliquez ICI</a></p>
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.login) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.Civilite)}}
        {{ form_row(registrationForm.Nom)}}
        {{ form_row(registrationForm.Prenom)}}
        {{ form_row(registrationForm.Ville)}}
        {{ form_row(registrationForm.Email)}}
        {{ form_row(registrationForm.Telephone)}}
        {{ form_row(registrationForm.Adresse)}}
        <button type="submit" class="btn btn-outline-success align-center">Inscription</button>
    </div>
{% endblock %}
